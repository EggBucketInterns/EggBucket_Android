<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginVertical="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/order_id"
                android:maxLength="20"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:text="Order Id : #3577"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_below="@+id/order_id"
                android:id="@+id/user_image"
                android:src="@drawable/generic_avatar"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/customer_id"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/user_image"
                android:layout_below="@+id/order_id"
                android:text="Customer ID"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/customer_idNumber"
                android:layout_toEndOf="@+id/user_image"
                android:layout_below="@+id/customer_id"
                android:text="72382378"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/eggs_image"
                android:layout_width="wrap_content"
                android:src="@drawable/eggs1"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/customer_idNumber"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/no_of_tray"
                android:layout_toEndOf="@+id/eggs_image"
                android:layout_below="@+id/customer_idNumber"
                android:text="No of Trays/Eggs"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/trays_no"
                android:layout_toEndOf="@+id/eggs_image"
                android:layout_below="@+id/no_of_tray"
                android:text="123"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/created_at"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/access_time_24"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/trays_no"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/created_at_text"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/created_at"
                android:layout_below="@+id/trays_no"
                android:textColor="@color/textcolor"
                android:text="Created At"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/deliverd_at_image"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:src="@drawable/access_time_24"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/created_at"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/deliverd_at_text"
                android:layout_toEndOf="@+id/created_at"
                android:layout_below="@+id/created_at_text"
                android:textColor="@color/textcolor"
                android:text="Delivered At"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/order_amount"
                android:layout_toEndOf="@+id/created_at_text"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:layout_below="@+id/created_at_text"
                android:textStyle="bold"
                android:textColor="#F37E20"
                android:text="Order Amount"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/order_money"
                android:layout_toEndOf="@+id/created_at_text"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:layout_below="@+id/order_amount"
                android:textStyle="bold"
                android:textColor="#F37E20"
                android:layout_marginEnd="10dp"
                android:text="$ 567.88"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ellips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/order_id"
                android:src="@drawable/ellipse" />
            <ImageView
                android:id="@+id/ellips1"
                android:layout_width="wrap_content"
                android:src="@drawable/ellipse1"
                android:layout_marginStart="60dp"
                android:layout_below="@+id/trays_no"
                android:layout_toEndOf="@+id/trays_no"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_completed"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/order_id"
                android:gravity="center"
                android:background="@drawable/pending_back"
                android:padding="10dp"
                android:text="Completed"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_toEndOf="@+id/no_of_tray"
                android:layout_below="@+id/no_of_tray"
                android:background="@drawable/order_details_back"
                android:layout_width="200dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:paddingStart="4dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="Order Details"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight=".5"
                    android:padding="5dp"
                    android:src="@drawable/order_detail_right_errow"
                    android:layout_height="wrap_content"/>
            </LinearLayout>







        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>